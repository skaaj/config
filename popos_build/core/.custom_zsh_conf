export PATH="$PATH:/home/skaaj/Applications/flutter/bin"
export PATH="$PATH:/home/skaaj/Applications/sbt/sbt-1.3.13/bin"
export PATH="$PATH:/usr/lib/jvm/java-11-openjdk-amd64/bin"
export PATH="$PATH:/opt/idea-IC-202.7660.26/bin"

export JAVA_HOME="/usr/lib/jvm/java-11-openjdk-amd64"
export ANDROID_HOME="/home/skaaj/Applications/android-sdk"

export WORKSPACE_DIR="/home/skaaj/Workspace"

function browse() {
    directory=`ls -Rd $1/* | fzf`
    if [ -z "$directory" ]
    then
     directory=$1
    fi
    cd $directory;
}

alias p="browse $WORKSPACE_DIR"
